pragma solidity ^0.8.18;

contract ErrorHandling {
    bool public rainy = true;
    bool public raincoat = false;
    uint256 public finalCall = 0;

    function weather() public {
        require(rainy, "THE WEATHER IS NOT RAINY TODAY.");
        finalCall += 5;

        assert(finalCall != 0);
    }

    function weatherChanger() public {
        rainy = !rainy;
    }

    function getFinalCall() public view returns (uint256) {
        return finalCall;
    }

    function bringRaincoat() public {
        if (rainy) {
            raincoat = true;
        } else {
            revert("NO RAINCOAT NEEDED");
        }
    }
}
